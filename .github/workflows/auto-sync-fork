name: Sync Fork

on:
  schedule:
    - cron: '0 0 * * 1-5' # Runs at 00:00 UTC on Mon to Friday
  workflow_dispatch:

jobs:
  sync:
    runs-on: ubuntu-latest
    steps:
      - uses: tgymnich/fork-sync@v1.8
        with:
          token: ${{ secrets.PERSONAL_ACCESS_TOKEN }}
          owner: apecloud
          repo: winget-pkgs
          base: master
          head: master
